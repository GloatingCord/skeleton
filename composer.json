{
    "name": "gloatingcord26/basic-lib",
    "autoload": {
        "psr-4": {
            "GloatingCord26\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.7",
        "phpunit/phpunit": "^9.5",
        "phpmd/phpmd": "^2.12"
    },
    "scripts": {
        "phpstan": [
            "vendor/bin/phpstan analyze --level max src"
        ],
        "phpmd": [
            "phpmd src xml test/rulesets.xml"
        ],
        "phpunit": [
            "vendor/bin/phpunit test/OutputTest.php"
        ],
        "test": [
            "@phpunit",
            "@phpmd",
            "@phpstan"
        ]
    }
}
